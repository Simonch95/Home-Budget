<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      
    android:columnOrderPreserved="false"
    android:background="#E2E2E4"
    android:rowCount="8"
    android:columnCount="4">

    <ImageButton
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:id="@+id/FoodBtn"
        android:text="Food"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/food"
        android:tooltipText="Food"
        
    />
    <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/FoodMoneyLbl"
        android:text="10"       
         android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"    
         android:layout_column="0"
        android:layout_row="1"
    />
    
   <com.akaita.android.circularseekbar.CircularSeekBar
        android:id="@+id/ProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_columnSpan="3"
        android:layout_rowSpan="2"
        app:ringWidth="0.2"
        app:min="0"
        app:showProgressText="true"
        app:showInnerCircle="true"
        app:progressTextColor="@android:color/black"
        app:enabled="true"
        app:innerCircleColor="#7EB3EF"
        app:ringColor="#50E904"
         android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        app:progressTextSize="45"
        
        
         />
     <ImageButton
          android:layout_width="61dp"
        android:layout_height="61dp"
         android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CarBtn"
        android:text="Car"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="1"
        android:layout_row="0"
        android:src="@drawable/car"
        android:tooltipText="Car"
    />
   <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/CarMoneyLbl"
       android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"    
         android:layout_column="1"
        android:layout_row="1"
    />
    <ImageButton
        android:layout_width="61dp"
        android:layout_height="61dp"
         android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CosmeticsBtn"
        android:text="Cosmetic"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="2"
        android:layout_row="0"
        android:src="@drawable/cosmetic2"
        android:tooltipText="Cosmetic"
    />
    <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/CosmeticMoneyLbl"
        android:text="10"       
         android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"          
         android:layout_column="2"
        android:layout_row="1"
        
    />
    <ImageButton
     android:layout_width="61dp"
        android:layout_height="61dp"       
        android:id="@+id/TransportBtn"
        android:text="Transport"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="3"
        android:layout_row="0"
        android:src="@drawable/transport"
        android:tooltipText="Transport"
    />
   <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/TransportMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="3"
        android:layout_row="1"
    />
     <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/HouseBtn"
        android:text="House"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="0"
        android:layout_row="2"
        android:src="@drawable/house"
        android:tooltipText="House"
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/HouseMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="0"
        android:layout_row="3"
    />
     <ImageButton
     android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/EntertainmentBtn"    
        android:text="Entertainment"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="3"
        android:layout_row="2"
        android:src="@drawable/entertainment"
        android:tooltipText="Entertainment"
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/EntertainmentMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="3"
        android:layout_row="3"
    />
     <ImageButton
       android:layout_width="61dp"
        android:layout_height="61dp" 
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/GiftsBtn"
        android:text="Gifts"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="0"
        android:layout_row="4"
        android:src="@drawable/gift2"
        android:tooltipText="Gifts"
    />
         <ImageButton
      android:layout_width="60dp"
        android:layout_height="60dp" 
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ClothesBtn"
        android:text="Clothes"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="2"
        android:layout_row="2"
        android:src="@drawable/clothes"
        android:tooltipText="Clothes"
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/ClothesMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="2"
        android:layout_row="3"
    />
           <ImageButton
         android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/PharmacyBtn"
        android:text="Pharmacy"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="1"
        android:layout_row="2"
         android:src="@drawable/pharmacy"
        android:tooltipText="Pharmacy"
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/PharmacyMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="1"
        android:layout_row="3"
    />
     <ImageButton
      android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/AnotherBtn"    
        android:text="Entertainment"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="3"
        android:layout_row="4"
        android:src="@drawable/another"
        android:tooltipText="Another"
        
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/GiftsMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="0"
        android:layout_row="5"
    />
     <TextView
          android:layout_width="61dp"
        android:layout_height="25dp"     
        android:id="@+id/AnotherMoneyLbl"
        android:text="10"       
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"     
         android:layout_column="3"
        android:layout_row="5"
    />
      <ImageButton
       android:layout_width="61dp"
        android:layout_height="61dp" 
        android:layout_marginLeft="10dp"
       android:layout_marginBottom="20dp"
        android:id="@+id/PreviousMonthBtn"
        android:text="Gifts"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#fe810f"
        android:layout_column="0"
        android:layout_row="7"
        android:src="@drawable/arrow_left"
        android:layout_gravity="bottom"
    />
     <ImageButton
      android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/NextMonthBtn"    
        android:text="Entertainment"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#fe810f"
        android:layout_column="3"
        android:layout_row="7"
        android:src="@drawable/arrow_right2"
        android:layout_gravity="bottom"
        
    />
     <Button
         android:layout_width="140dp"
        android:layout_height="61dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/DateBtn"
        android:text="Pharmacy"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"
        android:layout_column="1"
        android:layout_row="7"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom"
       
    />
</GridLayout>