<?xml version="1.0" encoding="utf-8" ?> 
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10px"
    android:minWidth="25px"
    android:minHeight="25px"
    android:columnOrderPreserved="false"
    android:background="#E2E2E4"
  android:rowCount="11"
  android:columnCount="3"
  android:focusableInTouchMode="true"
android:clickable="true"
android:focusable="true" >


    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Żywność: "
        android:backgroundTint="#5CC626"
        android:id="@+id/FoodLbl"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:textStyle="bold" 
   
        />
    <EditText
         android:layout_width="100dp"
         android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/FoodEText"   
        android:layout_row="0"
        android:layout_column="1"        
       />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Samochód: "
        android:backgroundTint="#5CC626"
        android:id="@+id/CarLbl"
        android:layout_below="@+id/FoodLbl"
        android:layout_row="1"
        android:layout_column="0"
        android:textStyle="bold" 
        />
      <EditText
         android:layout_width="100dp"
       android:layout_height="40dp"
         android:id="@+id/CarEText"   
        android:layout_below="@+id/FoodLbl"
        android:layout_row="1"
        android:layout_column="1"     
       />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Kosmetyki: "
        android:backgroundTint="#5CC626"
        android:id="@+id/CosmeticLbl"
        android:layout_below="@+id/CarLbl"
        android:layout_row="2"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/CosmeticEText"  
        android:layout_below="@+id/CarLbl"
        android:layout_row="2"
        android:layout_column="1"  
       />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Transport: "
        android:backgroundTint="#5CC626"
        android:id="@+id/TransportLbl"
        android:layout_below="@+id/CosmeticLbl"
        android:layout_row="3"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
     android:layout_width="100dp"
      android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/TransportEText" 
        android:layout_below="@+id/CosmeticLbl"
        android:layout_row="3"
        android:layout_column="1" 
 
       />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Dom: "
        android:backgroundTint="#5CC626"
        android:id="@+id/HouseLbl"
        android:layout_below="@+id/TransportLbl"
        android:layout_row="4"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
      android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/HouseEText"  
        android:layout_below="@+id/TransportLbl"
        android:layout_row="4"
        android:layout_column="1"  
         />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Rozrywka: "
        android:backgroundTint="#5CC626"
        android:id="@+id/EntertainmentLbl"
        android:layout_below="@+id/HouseLbl"
        android:layout_row="5"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
      android:layout_width="100dp"
      android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/EntertainmentEText"   
        android:layout_below="@+id/HouseLbl"
        android:layout_row="5"
        android:layout_column="1" 
           />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="Prezenty: "
        android:layout_marginLeft="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/GiftsLbl"
        android:layout_below="@+id/EntertainmentLbl"
        android:layout_row="6"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
        android:layout_width="100dp"
      android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/GiftsEText"      
        android:layout_below="@+id/EntertainmentLbl"
        android:layout_row="6"
        android:layout_column="1"  
          />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Ubrania: "
        android:backgroundTint="#5CC626"
        android:id="@+id/ClothesLbl"
        android:layout_below="@+id/GiftsLbl"
        android:layout_row="7"
        android:layout_column="0"
        android:textStyle="bold" 
        />
   <EditText
      android:layout_width="100dp"
      android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/ClothesEText"  
        android:layout_below="@+id/GiftsLbl"
        android:layout_row="7"
        android:layout_column="1"
    
       />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Apteka: "
        android:backgroundTint="#5CC626"
        android:id="@+id/PharmacyLbl"
        android:layout_below="@+id/ClothesLbl"
        android:layout_row="8"
        android:layout_column="0"
        android:textStyle="bold" 
        /> 
    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/PharamcyEText"  
        android:layout_below="@+id/ClothesLbl"
        android:layout_row="8"
        android:layout_column="1"  
       
       />
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Inne: "
        android:backgroundTint="#5CC626"
        android:id="@+id/AnotherLbl"
        android:layout_below="@+id/ClothesLbl"
        android:layout_row="9"
        android:layout_column="0"
        android:textStyle="bold" 
        /> 
    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/AnotherEText"  
        android:layout_below="@+id/ClothesLbl"
        android:layout_row="9"
        android:layout_column="1"  
       
       />
  <Button
    android:id="@+id/SaveButton"
    android:text="Zapisz"
    android:layout_width="80dp"
    android:layout_height="50dp"
    android:layout_marginRight="30dp"
    android:layout_row="10"
    android:layout_column="2"    
     android:background="@drawable/roundedbutton"
    android:backgroundTint="@android:color/holo_blue_bright"        
    />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:text="Ogółem: "
        android:backgroundTint="#5CC626"
        android:id="@+id/TotalLbl"
        android:layout_below="@+id/PharmacyLbl"
        android:layout_row="10"
        android:layout_column="0"
        android:textStyle="bold" 
        /> 
  <TextView
       android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="0"
        android:textSize="22dp"
        android:backgroundTint="#5CC626"
         android:id="@+id/TotalText"
        android:layout_below="@+id/PharmacyLbl"
        android:layout_row="10"
        android:layout_column="1"
        />
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/FoodInfo"
        android:layout_row="0"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/CarInfo"
        android:layout_below="@+id/FoodInfo"
        android:layout_row="1"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/CosmeticInfo"
        android:layout_below="@+id/CarInfo"
        android:layout_row="2"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/TransportInfo"
        android:layout_below="@+id/CosmeticInfo"
        android:layout_row="3"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/HouseInfo"
        android:layout_below="@+id/TransportInfo"
        android:layout_row="4"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/EntertainmentInfo"
        android:layout_below="@+id/HouseInfo"
        android:layout_row="5"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/GiftsInfo"
        android:layout_below="@+id/EntertainmentInfo"
        android:layout_row="6"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/ClothesInfo"
        android:layout_below="@+id/GiftsInfo"
        android:layout_row="7"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
     <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/PharmacyInfo"
        android:layout_below="@+id/ClothesInfo"
        android:layout_row="8"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:backgroundTint="#5CC626"
        android:id="@+id/AnotherInfo"
        android:layout_below="@+id/ClothesInfo"
        android:layout_row="9"
        android:layout_column="2"
        android:textStyle="bold" 
        /> 
    
</GridLayout>