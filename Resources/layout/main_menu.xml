
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:minWidth="25px"
    android:minHeight="25px"
    android:columnOrderPreserved="false"
    android:background="#E2E2E4"
  
    >

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Dodaj paragon"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"     
        android:layout_centerHorizontal="true" 
        android:layout_below="@+id/ProgressBar"
        android:id="@+id/AddReceiptBtn"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5CC626"/>
    <TextView
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/Budget"
        android:layout_below="@+id/Date"
        android:text="Budżet na ten miesiąc: "
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
       android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/BudgetStatus"
        android:layout_below="@+id/Date"
        android:textStyle="bold"
        android:text="120"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        />
     <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
       android:layout_marginTop="20dp"
        android:id="@+id/BudgetSpended"
        android:layout_below="@+id/Budget"
         android:textColor="@android:color/holo_red_dark"
        android:text="Wydano: "
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
       android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/BudgetSpendedStatus"
       android:layout_below="@+id/BudgetStatus"
        android:textColor="@android:color/holo_red_dark"
        android:text="120"
        android:textSize="20dp"
        android:textStyle="bold"
        />
     <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/BudgetLeft"
        android:layout_below="@+id/BudgetSpended"
        android:textColor="@android:color/holo_green_dark"
        android:text="Pozostało: "
        android:textStyle="bold"
       android:textSize="20dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/BudgetLeftStatus"
       android:layout_below="@+id/BudgetSpendedStatus"
        android:textColor="@android:color/holo_green_dark"
        android:text="120"
        android:textSize="20dp"
        android:textStyle="bold"
        />
   
    <Button       
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="Ustaw budżet" 
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"    
        android:layout_below="@+id/BudgetLeft"
        android:id="@+id/SetBudgetBtn"
        android:background="@drawable/roundedbutton"       
        android:backgroundTint="#aad2ac2f" />
    <Button       
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="Historia budżetu" 
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp" 
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/BudgetLeftStatus"
        android:id="@+id/CheckHistoryBudgetBtn"
        android:background="@drawable/roundedbutton"   
    android:layout_alignParentRight="true"
        android:backgroundTint="#aad2ac2f" />
    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Statystyki"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/CheckHistoryBudgetBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/ChartsBtn"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#aa4733de" />
   

 
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/Date"
        android:backgroundTint="#7EB3EF"
        android:text="DATA"
        android:background="@drawable/roundedbutton"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/PreviousDayBtn"
        android:layout_alignParentLeft="true"
        android:background="@drawable/roundedbutton"
       android:backgroundTint="#fe810f"
        android:src="@drawable/arrow_left" 
        />
    <ImageButton
         android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/roundedbutton"
        android:id="@+id/NextDayBtn"
        android:backgroundTint="#fe810f"
        android:src="@drawable/arrow_right2" 
        />



</RelativeLayout>